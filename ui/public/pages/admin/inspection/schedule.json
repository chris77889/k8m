{
  "type": "page",
  "body": [
    {
      "type": "crud",
      "id": "scheduleCRUD",
      "name": "scheduleCRUD",
      "autoFillHeight": true,
      "autoGenerateFilter": {
        "columnsNum": 4,
        "showBtnToolbar": false
      },
      "headerToolbar": [
        {
          "type": "button",
          "icon": "fas fa-plus text-primary",
          "actionType": "drawer",
          "label": "新建巡检计划",
          "drawer": {
            "closeOnEsc": true,
            "closeOnOutside": true,
            "title": "新建定时巡检计划 (ESC 关闭)",
            "body": {
              "type": "form",
              "api": "post:/admin/inspection/schedule/save",
              "body": [
                {
                  "type": "input-text",
                  "name": "name",
                  "label": "任务名称",
                  "required": true,
                  "placeholder": "请输入任务名称",
                  "validateOnChange": true,
                  "validations": {
                    "minLength": 2,
                    "maxLength": 50
                  },
                  "validationErrors": {
                    "minLength": "任务名称至少 2 个字符",
                    "maxLength": "任务名称最多 50 个字符"
                  }
                },
                {
                  "type": "input-text",
                  "name": "description",
                  "label": "任务描述",
                  "placeholder": "请输入任务描述"
                },
                {
                  "type": "select",
                  "name": "clusters",
                  "label": "目标集群",
                  "multiple": true,
                  "source": "/params/cluster/option_list",
                  "labelField": "label",
                  "valueField": "value",
                  "placeholder": "请选择目标集群"
                },
                {
                  "type": "input-text",
                  "name": "cron",
                  "label": "Cron表达式",
                  "required": true,
                  "placeholder": "请输入cron表达式"
                },
                {
                  "type": "switch",
                  "name": "enabled",
                  "label": "是否启用",
                  "onText": "启用",
                  "offText": "禁用",
                  "value": true
                }
              ],
              "submitText": "保存",
              "resetText": "重置",
              "messages": {
                "saveSuccess": "保存成功",
                "saveFailed": "保存失败"
              },
              "onEvent": {
                "submitSucc": {
                  "actions": [
                    {
                      "actionType": "reload",
                      "componentId": "scheduleCRUD"
                    },
                    {
                      "actionType": "closeDrawer"
                    }
                  ]
                }
              }
            }
          }
        },
        "reload",
        "bulkActions"
      ],
      "loadDataOnce": false,
      "syncLocation": false,
      "initFetch": true,
      "perPage": 10,
      "bulkActions": [
        {
          "label": "批量删除",
          "actionType": "ajax",
          "confirmText": "确定要批量删除?",
          "api": "post:/admin/inspection/schedule/delete/${ids}"
        }
      ],
      "footerToolbar": [
        {
          "type": "pagination",
          "align": "right"
        },
        {
          "type": "statistics",
          "align": "right"
        },
        {
          "type": "switch-per-page",
          "align": "right"
        }
      ],
      "api": "get:/admin/inspection/schedule/list",
      "quickSaveItemApi": "/admin/inspection/schedule/save/id/${id}/status/${enabled}",
      "columns": [
        {
          "type": "operation",
          "label": "操作",
          "width": 120,
          "buttons": [
            {
              "type": "button",
              "icon": "fas fa-edit text-primary",
              "actionType": "drawer",
              "tooltip": "编辑任务",
              "drawer": {
                "closeOnEsc": true,
                "closeOnOutside": true,
                "title": "编辑定时巡检任务 (ESC 关闭)",
                "body": {
                  "type": "form",
                  "api": "post:/admin/inspection/schedule/save",
                  "body": [
                    {
                      "type": "hidden",
                      "name": "id"
                    },
                    {
                      "type": "input-text",
                      "name": "name",
                      "label": "任务名称",
                      "required": true,
                      "placeholder": "请输入任务名称",
                      "validateOnChange": true,
                      "validations": {
                        "minLength": 2,
                        "maxLength": 50
                      },
                      "validationErrors": {
                        "minLength": "任务名称至少 2 个字符",
                        "maxLength": "任务名称最多 50 个字符"
                      }
                    },
                    {
                      "type": "input-text",
                      "name": "description",
                      "label": "任务描述",
                      "placeholder": "请输入任务描述"
                    },
                    {
                      "type": "select",
                      "name": "clusters",
                      "label": "目标集群",
                      "multiple": true,
                      "source": "/params/cluster/option_list",
                      "labelField": "label",
                      "valueField": "value",
                      "placeholder": "请选择目标集群"
                    },
                    {
                      "type": "input-text",
                      "name": "cron",
                      "label": "Cron表达式",
                      "required": true,
                      "placeholder": "请输入cron表达式"
                    },
                    {
                      "type": "switch",
                      "name": "enabled",
                      "label": "是否启用",
                      "onText": "启用",
                      "offText": "禁用"
                    }
                  ],
                  "submitText": "保存",
                  "resetText": "重置",
                  "messages": {
                    "saveSuccess": "保存成功",
                    "saveFailed": "保存失败"
                  },
                  "onEvent": {
                    "submitSucc": {
                      "actions": [
                        {
                          "actionType": "reload",
                          "componentId": "scheduleCRUD"
                        },
                        {
                          "actionType": "closeDrawer"
                        }
                      ]
                    }
                  }
                }
              }
            },
            {
              "type": "button",
              "icon": "fas fa-play text-primary",
              "actionType": "ajax",
              "api": "post:/admin/inspection/schedule/start/id/$id"
            },
            {
              "type": "button",
              "icon": "fas fa-history text-primary",
              "actionType": "drawer",
              "tooltip": "巡检历史",
              "drawer": {
                "closeOnEsc": true,
                "closeOnOutside": true,
                "size": "lg",
                "title": "查看巡检历史 (ESC 关闭)",
                "body": {
                  "type": "crud",
                  "id": "toolsCRUD",
                  "name": "toolsCRUD",
                  "autoFillHeight": true,
                  "api": "get:/admin/inspection/schedule/id/$id/record/list",
                  "headerToolbar": [
                    {
                      "type": "columns-toggler",
                      "align": "right",
                      "draggable": true,
                      "icon": "fas fa-cog",
                      "overlay": true,
                      "footerBtnSize": "sm"
                    },
                    {
                      "type": "tpl",
                      "tpl": "共${count}条",
                      "align": "right",
                      "visibleOn": "${count}"
                    },
                    {
                      "type": "columns-toggler",
                      "align": "left"
                    },
                    "reload"
                  ],
                  "loadDataOnce": true,
                  "syncLocation": false,
                  "initFetch": true,
                  "perPage": 10,
                  "columns": [
                    {
                      "name": "cluster",
                      "label": "集群"
                    },
                    {
                      "name": "trigger_type",
                      "label": "触发类型"
                    },
                    {
                      "name": "status",
                      "label": "状态"
                    },
                    {
                      "name": "start_time",
                      "label": "开始时间"
                    }
                  ]
                }
              }
            }
          ]
        },
        {
          "name": "name",
          "label": "任务名称",
          "type": "text",
          "width": "180px"
        },
        {
          "name": "description",
          "label": "描述",
          "type": "text",
          "width": "200px"
        },
        {
          "name": "clusters",
          "label": "目标集群",
          "type": "tpl",
          "tpl": "${clusters | split:',')}"
        },
        {
          "name": "cron",
          "label": "Cron表达式",
          "type": "text"
        },
        {
          "name": "enabled",
          "label": "启用",
          "quickEdit": {
            "mode": "inline",
            "type": "switch",
            "onText": "开启",
            "offText": "关闭",
            "saveImmediately": true,
            "resetOnFailed": true
          }
        },
        {
          "name": "created_by",
          "label": "创建人",
          "type": "text"
        },
        {
          "name": "created_at",
          "label": "创建时间",
          "type": "datetime"
        }
      ]
    }
  ]
}