{
    "type": "page",
    "body": [
        {
            "type": "inspectionSummary"
        },
        {
            "type": "form",
            "mode": "inline",
            "wrapWithPanel": false,
            "target": "service-summary",
            "controls": [
                {
                    "type": "datetime",
                    "name": "start_time",
                    "label": "起始时间",
                    "format": "YYYY-MM-DDTHH:mm:ssZ",
                    "inputFormat": "YYYY-MM-DD HH:mm:ss",
                    "value": "+0days"
                },
                {
                    "type": "datetime",
                    "name": "end_time",
                    "label": "结束时间",
                    "format": "YYYY-MM-DDTHH:mm:ssZ",
                    "inputFormat": "YYYY-MM-DD HH:mm:ss",
                    "value": "+1days"
                },
                {
                    "type": "submit",
                    "label": "查询"
                }
            ]
        },
        {
            "type": "service",
            "name": "service-summary",
            "api": "post:/admin/inspection/schedule/id/$id/summary/start_time/$start_time/end_time/$end_time",
            "body": [
                {
                    "type": "tpl",
                    "tpl": "<b>总执行次数：</b> ${total_runs}  <b>总集群数：</b> ${total_clusters}  "
                },
                {
                    "type": "panel",
                    "title": "最后一次执行 <b>记录ID：</b> ${latest_run.record_id} <b>执行时间：</b> ${latest_run.run_time}",
                    "body": [
                        {
                            "type": "table",
                            "source": "${latest_run.kinds}",
                            "columns": [
                                {
                                    "name": "kind",
                                    "label": "资源类型"
                                },
                                {
                                    "name": "normal_count",
                                    "label": "正常数"
                                },
                                {
                                    "name": "error_count",
                                    "label": "异常数"
                                }
                            ]
                        }
                    ]
                },
                {
                    "type": "tpl",
                    "tpl": "<b>各集群明细：</b>"
                },
                {
                    "type": "each",
                    "name": "clusters",
                    "items": [
                        {
                            "type": "panel",
                            "title": "集群：${cluster}  (执行${run_count}次)",
                            "body": [
                                {
                                    "type": "table",
                                    "source": "${kinds}",
                                    "columns": [
                                        {
                                            "name": "kind",
                                            "label": "资源类型"
                                        },
                                        {
                                            "name": "count",
                                            "label": "总数"
                                        },
                                        {
                                            "name": "error_count",
                                            "label": "异常数"
                                        }
                                    ]
                                }
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}