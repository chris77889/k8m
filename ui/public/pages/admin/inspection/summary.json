{
    "type": "page",
    "body": [
        {
            "type": "service",
            "api": "post:/admin/inspection/schedule/id/$id/summary",
            "body": [
                {
                    "type": "tpl",
                    "tpl": "<b>总执行次数：</b> ${total_runs}  <b>总集群数：</b> ${total_clusters}  "
                },
                {
                    "type": "panel",
                    "title": "最后一次执行 <b>记录ID：</b> ${latest_run.record_id} <b>执行时间：</b> ${latest_run.run_time}",
                    "body": [
                        {
                            "type": "table",
                            "source": "${latest_run.kinds}",
                            "columns": [
                                {
                                    "name": "kind",
                                    "label": "资源类型"
                                },
                                {
                                    "name": "normal_count",
                                    "label": "正常数"
                                },
                                {
                                    "name": "error_count",
                                    "label": "异常数"
                                }
                            ]
                        }
                    ]
                },
                {
                    "type": "tpl",
                    "tpl": "<b>各集群明细：</b>"
                },
                {
                    "type": "each",
                    "name": "clusters",
                    "items": [
                        {
                            "type": "panel",
                            "title": "集群：${cluster}  (执行${run_count}次)",
                            "body": [
                                {
                                    "type": "table",
                                    "source": "${kinds}",
                                    "columns": [
                                        {
                                            "name": "kind",
                                            "label": "资源类型"
                                        },
                                        {
                                            "name": "count",
                                            "label": "总数"
                                        },
                                        {
                                            "name": "error_count",
                                            "label": "异常数"
                                        }
                                    ]
                                }
                            ]
                        },
                        {}
                    ]
                }
            ]
        }
    ]
}